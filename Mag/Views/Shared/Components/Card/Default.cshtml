@model Mag.Areas.Admin.Models.Dto.News.NewsCardDto


<div class="col-md-12">
    <div class="row">
        <div class="col-md-5 titleNews">
            <p>
                فناوری ایران
            </p>
            <h1>
                گزارش یکتانت: ۸۰ درصد کاربران ایرانی از فیلترشکن استفاده می‌کنند
            </h1>
            <p>
                گزارش ۱۴۰۱ یکتانت نشان می‌دهد میزان بازدیدها از تبلیغات آنلاین در پلتفرم‌های فیلترشده و سایت‌های ایرانی در روزهای اوج اختلالات اینترنت، کاهش شدیدی داشته است.
            </p>
            <div class="d-flex align-items-center">
                <div class="symbol symbol-35px symbol-circle"  aria-label="میلاد مرادی">
                    <img alt="Pic" src="~/@Model.UserImage">
                </div>
                <p class="Detalis">
                    نوشته شده توسط @Model.UserFullName | @Model.PublishNewsDatePersianDay @Model.PublishNewsDatePersianmonth @Model.PublishNewsDatePersianYear | @Model.PublishNewsDatePersianTime
                </p>
            </div>
        </div>
        <div class="col-md-7 ShowNews">
            <img src="~/@Model.IndexImageAddress" class="imgNews" />
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-7">
            @if (Model.DescriptionHtmlEditor != null)
            {
                <div class="textNews">
                    @Html.Raw(Model.DescriptionHtmlEditor)
                </div>
            }
            else
            {
                <div style="border-radius: 16px;border: 1px solid #ccc!important;padding: 15px 15px;min-height:100px">
                </div>
            }
        </div>
        <div class="col-md-3 ad">
            <div class="row">
                <div class="col-md-12" style="background-color:aqua;height:500px">
                </div>
                <div class="col-md-12" style="background-color:brown;height:500px">
                </div>
            </div>
        </div>
    </div>
</div>