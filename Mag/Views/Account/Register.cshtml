                                    <!--begin::شماره همراه-->
                                    <label asp-for="PhoneNumber" class="pb-1" style="font-size:16px">شماره تلفن</label>
                                    <input asp-for="PhoneNumber" maxlength="11" type="text" placeholder="مثال : 09xxxxxxxxx" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    <!--end::شماره همراه-->
                                </div>
                                <!--end::Input group=-->
                                <!--begin::Input group=-->
                                <div class="fv-row mb-8">
                                    <!--begin::ایمیل-->
                                    <label asp-for="Email" class="pb-1" style="font-size:16px">ایمیل</label>
                                    <input asp-for="Email" type="text" placeholder="Forxampel@gmail.com" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
